<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirect "/documentation" to the actual file without changing the URL
  RewriteRule ^documentation/?$ src/pages/documentation.html [L,NC]

  # Optional: Hide .html extensions for all pages
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !\.html$ [NC]
  RewriteRule ^([^/]+)/?$ $1.html [L]

  # Block direct access to the /src/pages directory
  RewriteRule ^src/pages/ - [F,L]

  # Remove trailing slashes (e.g., /documentation/ â†’ /documentation)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} (.+)/$
  RewriteRule ^ %1 [R=301,L]
</IfModule>